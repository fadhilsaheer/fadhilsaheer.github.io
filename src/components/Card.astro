---
interface Props {
  title: string;
  link: string;
  substring: string;
  description: string;
  image?: any; // can be a file/image or direct image
}

const { title, link, substring, description, image } = Astro.props;
---

<a href={link} target='_blank'>
  <div
    class='cursor-pointer group w-full hover:opacity-80 rounded-2xl bg-white/5 p-7 shadow-surface-elevation-low transition duration-300 hover:bg-white/10 hover:shadow-surface-elevation-medium'
  >
    <div class='flex w-full'>
      {image && <img src={image} alt={title} class='w-14 mr-5' />}
      <div class='grow'>
        <h3
          class='text-xl font-medium text-rose-100/80 group-hover:underline underline-offset-4'
        >
          {title}
        </h3>
        <p class='text-lg text-rose-100/50'>{substring}</p>
      </div>
    </div>
    <p class='mt-5 text-xl text-rose-100/80'>{description}</p>
  </div>
</a>
