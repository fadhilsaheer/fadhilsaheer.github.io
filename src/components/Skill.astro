---
interface Props {
  icon: string;
  title: string;
  link: string;
}

const { icon, title, link } = Astro.props;
---

<a href={link} target='_blank'>
  <div
    class='cursor-pointer flex items-center overflow-hidden rounded-2xl bg-white/5 py-4 px-3 shadow-surface-elevation-low transition duration-300 hover:bg-white/10 hover:shadow-surface-elevation-medium'
  >
    <img src={icon + '&color=000'} alt={title} class='w-7' />
    <p class='ml-2 text-xl'>{title}</p>
  </div>
</a>
